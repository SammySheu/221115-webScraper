extends layout

block content
    h1 LogIn
    if(messages.error || message_success)
        span= (messages.error || message_success)
    form(action='/login', method='post')
        p Email 
            input(type='text', id='nameID', name='email' required)
        p Password 
            input(type='text', id='passwordID', name='password' required)
        button(type='submit') Login
    a(href='/register') Register